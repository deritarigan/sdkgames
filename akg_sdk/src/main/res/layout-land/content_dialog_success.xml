<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:background="@color/grey"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:layout_width="400dp"
            app:cardBackgroundColor="@color/grey"
            android:maxWidth="400dp"
            android:layout_margin="16dp"
            android:layout_height="350dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@mipmap/bg2"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Congratulation"
                    android:drawableLeft="@drawable/vector_ic_people"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:drawablePadding="8dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:text="@string/success_placeholder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUID"
                    android:textColor="@color/black" app:layout_constraintStart_toStartOf="@+id/tvPhoneNumber"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/btnNext"
                    android:gravity="center"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    style="@style/ButtonLogin"
                    android:background="@drawable/button_selector_tosca"
                    android:drawablePadding="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="36dp" app:layout_constraintTop_toBottomOf="@+id/tvUID"
                    app:layout_constraintVertical_bias="0.19999999"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>