<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:background="@color/grey"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:layout_width="400dp"
            android:maxWidth="400dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@mipmap/bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="210dp"
                    android:layout_height="70dp"

                    android:background="@drawable/vector_logo"
                    android:id="@+id/ivLogo" android:layout_marginTop="36dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.5"/>
            <Button
                    android:text="@string/btn_continue"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:layout_width="0dp"
                    style="@style/ButtonLogin"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_red"
                    android:id="@+id/btnBindFacebook"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="36dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="36dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUID"/>
            <Button
                    android:text="@string/btn_choose_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:id="@+id/btnBindGoogle"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/ButtonLogin"
                    android:drawablePadding="24dp"
                    android:background="@drawable/rounded_rectangle_tosca"
                    app:layout_constraintEnd_toEndOf="@+id/btnBindFacebook"
                    app:layout_constraintStart_toStartOf="@+id/btnBindFacebook"
                    app:layout_constraintTop_toBottomOf="@+id/tvChangePassword" android:layout_marginBottom="48dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.01999998"/>
            <TextView
                    android:text="@string/sign_in_with_another_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChangePassword"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnBindFacebook"/>

            <View
                    android:layout_width="0dp"
                    android:background="@color/light_grey"
                    android:layout_height="2dp"
                    android:id="@+id/view" app:layout_constraintEnd_toStartOf="@+id/tvChangePassword"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintStart_toStartOf="@+id/btnBindGoogle"
                    app:layout_constraintTop_toTopOf="@+id/tvChangePassword"
                    app:layout_constraintBottom_toBottomOf="@+id/tvChangePassword"/>
            <View
                    android:layout_width="0dp"
                    android:background="@color/light_grey"
                    android:layout_height="2dp"
                    android:id="@+id/view2"
                    app:layout_constraintTop_toTopOf="@+id/tvChangePassword"
                    app:layout_constraintBottom_toBottomOf="@+id/tvChangePassword"
                    app:layout_constraintEnd_toEndOf="@+id/btnBindGoogle"
                    app:layout_constraintStart_toEndOf="@+id/tvChangePassword"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Welcome +62812577719,"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/tvPhoneNumber" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivLogo"
                    app:layout_constraintStart_toStartOf="@+id/btnBindFacebook"/>
            <TextView
                    android:text="UID : 20182874108b3147839"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"

                    android:id="@+id/tvUID" app:layout_constraintStart_toStartOf="@+id/btnBindFacebook"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>