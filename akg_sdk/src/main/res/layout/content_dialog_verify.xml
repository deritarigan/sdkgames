<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" android:id="@+id/constraintLayout2">
    <FrameLayout android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginBottom="8dp"
                 android:layout_gravity="center"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:background="@mipmap/bg_box"
                android:padding="24dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="16dp"
                    android:text="Registration"
                    android:drawableLeft="@drawable/vector_ic_people_white"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"/>
            <TextView
                    android:text="@string/verify_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUID"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    style="@style/DescriptionStyle"
                    android:layout_marginTop="16dp"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                <EditText
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:inputType="text|phone"
                        android:ems="10"
                        android:paddingLeft="16dp"
                        android:text="+62"
                        android:enabled="false"
                        style="@style/EditTextStyle" android:background="@drawable/rounded_rectangle_white"
                        android:id="@+id/etPhoneCode"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:ems="10"
                        android:id="@+id/etPhoneNumber"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/rounded_rectangle_white"
                        style="@style/EditTextStyle"
                        android:hint="Phone Number"/>
            </LinearLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/view3"
                    android:background="@color/grey"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
            >
                <TextView
                        android:text="OTP Code send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/textView2"
                        style="@style/DescriptionStyle"
                        app:layout_constraintTop_toTopOf="@+id/etOtpCode"
                        app:layout_constraintBottom_toBottomOf="@+id/etOtpCode"
                        app:layout_constraintStart_toStartOf="parent"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:ems="10"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:background="@drawable/rounded_rectangle_white"
                        android:id="@+id/etOtpCode"
                        android:imeOptions="actionDone"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:hint="OTP Code"
                        style="@style/EditTextStyle"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="Resend OTP's Code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/greeny_blue"
                        android:id="@+id/tvResendOTP"
                        style="@style/DescriptionStyle"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/etOtpCode"
                        app:layout_constraintEnd_toEndOf="@+id/etOtpCode"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                    android:text="Next"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:id="@+id/btnNext"
                    android:layout_gravity="center"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:layout_marginTop="48dp"
                    style="@style/ButtonLogin" android:background="@drawable/rounded_rectangle_deepblue"
                    android:drawablePadding="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
            />
        </LinearLayout>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:id="@+id/ivClose"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:background="@mipmap/x_btn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintVertical_bias="0.32999998"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>