<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" android:id="@+id/constraintLayout2">
    <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                 app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                 android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@mipmap/bg_box"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintVertical_bias="0.498" android:id="@+id/constraintLayout3">

            <TextView
                    android:text="Verify Account"
                    android:drawableLeft="@drawable/vector_ic_people_white"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>

            <TextView
                    android:text="@string/verify_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUID"
                    android:textColor="@color/white" app:layout_constraintStart_toStartOf="@+id/tvPhoneNumber"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <EditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="text|phone"
                    android:ems="10"
                    android:hint="+62"
                    android:paddingStart="16dp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:id="@+id/etPhoneCode"
                    app:layout_constraintStart_toStartOf="@+id/tvUID" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUID"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"

                    android:ems="10"
                    android:id="@+id/etPhoneNumber"
                    app:layout_constraintEnd_toEndOf="@+id/tvUID"
                    android:background="@drawable/rounded_rectangle_white"

                    app:layout_constraintTop_toTopOf="@+id/etPhoneCode"
                    app:layout_constraintBottom_toBottomOf="@+id/etPhoneCode" android:hint="Phone Number"
                    app:layout_constraintStart_toEndOf="@+id/etPhoneCode" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/etOtpCode"
                    app:layout_constraintEnd_toEndOf="@+id/etPhoneNumber"
                    android:hint="OTP's Code"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Resend OTP's Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greeny_blue"

                    android:id="@+id/tvResendOTP" app:layout_constraintEnd_toEndOf="@+id/etOtpCode"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/etOtpCode"/>
            <Button
                    android:text="Next"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:id="@+id/btnNext"
                    android:gravity="center"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    style="@style/ButtonMenu"
                    android:background="@drawable/rounded_rectangle_deepblue"
                    android:drawablePadding="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvResendOTP"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="36dp"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:id="@+id/view3"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey"
                    app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
                    app:layout_constraintStart_toStartOf="@+id/etPhoneCode"
                    app:layout_constraintEnd_toEndOf="@+id/etPhoneNumber"
            />
            <TextView
                    android:text="Send OTP's Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/etPhoneCode"
                    app:layout_constraintTop_toTopOf="@+id/etOtpCode"
                    app:layout_constraintBottom_toBottomOf="@+id/etOtpCode"
                    app:layout_constraintEnd_toStartOf="@+id/etPhoneNumber" android:layout_marginEnd="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:id="@+id/ivClose"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:background="@mipmap/x_btn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintVertical_bias="0.32999998"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>